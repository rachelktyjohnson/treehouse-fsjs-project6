extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= project.project_name
        p.lead.text-light= project.description
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each technology in project.technologies
            li= technology

        if project.live_link!=="#"
          a.button.expanded(target="_blank", href= project.live_link ) Live Demo
        if project.github_link!=="#"
          a.button.expanded(target="_blank", href= project.github_link ) GitHub Repo
    
    each imageURL in project.img_urls.slice(1)
      img.image(src=imageURL)

